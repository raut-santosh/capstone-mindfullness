{{>admin/header}}
{{>admin/sidebar}}





<main id="main" class="main">

  <div class="pagetitle">
    <h1>NGO Page</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
        <li class="breadcrumb-item">Pages</li>
        <li class="breadcrumb-item active">NGO</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">NGO Form</h5>

            <!-- Multi Columns Form -->
            <form class="row g-3" action="/admin/ngo" method="POST">
              {{!-- <input type="text" style="display:none;" name="id" value="{{{data._id}}}"> --}}
              <div class="col-md-6">
                <div class="mb-3">
                  <label for="inputName5" class="form-label">Title</label>
                  <input type="text" class="form-control" id="inputName5" name="title" value="{{data.title}}">
                </div>
                <div style="display:flex;align-items:center;">
                  <h5 class="card-title">Add Items:</h5><i class="bx bxs-plus-circle"
                    style="margin:0 0 3px 15px;color:#012970;"></i>
                </div>
                {{#each data.items}}
                <div id="items-loop">
                  <hr>
                  <div class="mb-2">
                    <h5 style="color:#012970;">Item 1:</h5>
                  </div>
                  <div class="mb-3">
                    <label for="inputName5" class="col-form-label">Title</label>
                    <div class="col-sm-12">
                      <input type="text" class="form-control" id="inputName5" name="item_title"
                        value="{{data.items.item_title}}">
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="inputName5" class="col-form-label">Sub Title</label>
                    <div class="col-sm-12">
                      <input type="text" class="form-control" id="inputName5" name="item_sub_title"
                        value="{{data.items.item_sub_title}}">
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="inputName5" class="col-form-label">Content</label>
                    <div class="col-sm-12">
                      <input type="text" class="form-control" id="inputName5" name="item_content"
                        value="{{data.items.item_content}}">
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="inputNumber" class="col-form-label">Image</label>
                    <div class="col-sm-12">
                      <input class="form-control" type="file" id="formFile" name="image" value="{{data.image}}">
                    </div>
                  </div>
                  <hr>
                </div>
                {{/each}}
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <label for="tiny" class="form-label">Description</label>
                  <textarea class="tinymce-editor" id="tiny" name="description">
                          {{data.description}}
                </textarea>
                </div>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

</main>



{{>admin/footer}}