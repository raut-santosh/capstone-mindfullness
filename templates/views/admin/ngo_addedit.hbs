{{> admin/header}}
{{> admin/sidebar}}

<main id="main" class="main">

  <div class="pagetitle">
    <h1>Ngo Page</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
        <li class="breadcrumb-item">Pages</li>
        <li class="breadcrumb-item active">Ngo</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Write Ngo</h5>

            <!-- Multi Columns Form -->
            <form class="row g-3" action="/admin/ngo_addedit" method="POST" enctype="multipart/form-data">
              <input type="text" style="display:none;" name="id" value="{{data.id}}">
              <input type="text" style="display:none;" name="fileid" value="{{data.fileid}}">
              <div class="col-md-12">
                <div class="mb-3">
                  <label for="inputName5" class="form-label">Title</label>
                  <input type="text" class="form-control" id="inputName5" name="title" value="{{data.title}}">
                </div>
                  <div class="mb-3">
                    <label for="inputNumber" class="col-form-label">Image</label>
                    <div class="col-sm-12">
                      <input class="form-control" type="file" id="formFile" name="image" value="{{data.file}}">

                    </div>
                    {{#if data.filepath}}
                    <img style="width:100px;" class="card-image mt-2" src="/{{data.filepath}}" alt="file">
                    {{/if}}
                  </div>
                  <div class="mb-3">
                    <label for="inputName5" class="form-label">Tagline</label>
                    <input type="text" class="form-control" id="inputName5" name="tagline" value="{{data.tagline}}">
                  </div>
                   <div class="mb-3">
                    <label for="tiny" class="form-label">Description</label>
                    <textarea class="tinymce-editor" id="tiny" name="description">
                            {{data.description}}
                    </textarea>
                  </div>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

</main>



{{> admin/footer}}