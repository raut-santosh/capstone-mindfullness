{{> admin/header}}
{{> admin/sidebar}}

<main id="main" class="main">

  <div class="pagetitle">
    <h1>Get A Start Section</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
        <li class="breadcrumb-item">Pages</li>
        <li class="breadcrumb-item">Section</li>
        <li class="breadcrumb-item active">Get A Start</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Get A Start</h5>

            <!-- Multi Columns Form -->
            <form class="row g-3" action="/admin/getastart" method="POST">
              <input type="text" style="display:none;" name="id" value="{{data.id}}">
              <div class="col-md-12">
                <div class="mb-3">
                  <label for="inputName5" class="form-label">Title</label>
                  <input type="text" class="form-control" id="inputName5" name="title" value="{{data.title}}">
                </div>
                <div class="mb-3">
                    <label for="tiny" class="form-label">Description</label>
                    <textarea class="tinymce-editor" id="tiny" name="description">
                            {{data.description}}
                    </textarea>
                </div>
                <h5 class="card-title">Items:</h5>
                <hr>
                <span>Item 1:</span>
                <div class="mb-3">
                  <label for="inputName5" class="form-label">name</label>
                  <input type="text" class="form-control" id="inputName5" name="item_name" value="{{data.item_name_0}}">
                </div>
                <div class="mb-3">
                  <label for="inputName5" class="form-label">count</label>
                  <input type="number" class="form-control" id="inputName5" name="item_count" value="{{data.item_count_0}}">
                </div>
                <div class="mb-3">
                  <label for="inputName5" class="form-label">content</label>
                  <input type="text" class="form-control" id="inputName5" name="item_content" value="{{data.item_content_0}}">
                </div>
                <hr>
                <hr>
                <span>Item 2:</span>
                <div class="mb-3">
                  <label for="inputName5" class="form-label">name</label>
                  <input type="text" class="form-control" id="inputName5" name="item_name" value="{{data.item_name_1}}">
                </div>
                <div class="mb-3">
                  <label for="inputName5" class="form-label">count</label>
                  <input type="number" class="form-control" id="inputName5" name="item_count" value="{{data.item_count_1}}">
                </div>
                <div class="mb-3">
                <label for="inputName5" class="form-label">content</label>
                  <input type="text" class="form-control" id="inputName5" name="item_content" value="{{data.item_content_1}}">
                </div>
                <hr>
                <hr>
                <span>Item 3:</span>
                <div class="mb-3">
                  <label for="inputName5" class="form-label">name</label>
                  <input type="text" class="form-control" id="inputName5" name="item_name" value="{{data.item_name_2}}">
                </div>
                <div class="mb-3">
                  <label for="inputName5" class="form-label">count</label>
                  <input type="number" class="form-control" id="inputName5" name="item_count" value="{{data.item_count_2}}">
                </div>
                <div class="mb-3">
                  <label for="inputName5" class="form-label">content</label>
                  <input type="text" class="form-control" id="inputName5" name="item_content" value="{{data.item_content_2}}">
                </div>
                <hr>
                <hr>
                <span>Item 4:</span>
                <div class="mb-3">
                  <label for="inputName5" class="form-label">name</label>
                  <input type="text" class="form-control" id="inputName5" name="item_name" value="{{data.item_name_3}}">
                </div>
                <div class="mb-3">
                  <label for="inputName5" class="form-label">count</label>
                  <input type="number" class="form-control" id="inputName5" name="item_count" value="{{data.item_count_3}}">
                </div>
                <div class="mb-3">
                  <label for="inputName5" class="form-label">content</label>
                  <input type="text" class="form-control" id="inputName5" name="item_content" value="{{data.item_content_3}}">
                </div>
                <hr>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

</main>



